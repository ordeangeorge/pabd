{% extends 'base.html.twig' %}

{% block title "Adrian - Contact form" %}

{% block body %}
	<h1>Formular de contact</h1>
    <form action="{{ path('_adrian_contact') }}" method="POST" id="contact_form">
        {{ form_errors(form) }}

        {{ form_row(form.email) }}
        {{ form_row(form.message) }}

        {{ form_rest(form) }}
        <input type="submit" value="Send"" />
    </form>
{% endblock %}
